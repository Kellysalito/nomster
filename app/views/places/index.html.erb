<% @places.each do |place| %>
<div class="booyah-box col-10 offset-1">
  <h1><%= link_to place.name, place_path(place) %></h1><br />
  <i><%= place.address %></i><br /><br />
  <p><%= place.description %></p><br />
  
  <% if place.user.present? %>
  <small><%= place.user.email %></small>
  <% end %>

  <%if place.comments.present? %>
  <div class="col-12">
    <blockquote>
      <% if place.comments.last.humanized_rating.present? %>
      <b><%= place.comments.last.humanized_rating %></b> -
      <% end %>
        <%= place.comments.last.message %>
      <small><%= place.comments.last.user.email %></small>
    </blockquote>
  </div>
  <% end %>
  

  <% if place.photos.last.present? %>
   <div class='col col-sm-12 place_photos'>
   <blockquote>
     <% if place.photos.last.caption.present? %>
        <%= place.photos.last.caption %>
        <% end %>
      </blockquote>
    <div class='col col-sm-6'>
      <%= image_tag place.photos.last.picture.url %>
    </div>
    <div class='col col-sm-6'>
      <a href="<%= place.photos.last.picture %>">Full Size Image</a>
     <% end %>
    </div>
  </div>
</div>
<% end %>

<div>
  <%= will_paginate @places, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>